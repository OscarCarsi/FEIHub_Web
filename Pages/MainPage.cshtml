@page
@model FEIHub_Web.Pages.MainPageModel;
@{
    Layout=null;
}

<!doctype html>
<html lang="en">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <nav>
            <div class="nav-left">
                <img src="Resources/Logo.png" class="logo">
            </div>
            <div class="nav-center">
                <div class="search-box">

                    <input type="text" placeholder="Buscar en FeiHub">
                    <button class="btn btn-primary-icon"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>

            </div>
            <div class="nav-rigth">
                    <button class="btn btn-primary-icon"><i class="fa-solid fa-user"></i></button>
                    <button class="btn btn-primary-icon"><i class="fa-solid fa-message"></i></button>
                    <button class="btn btn-primary-icon"><i class="fa-solid fa-message"></i></button>
                    <button class="btn btn-primary-icon"><i class="fa-solid fa-arrow-right-from-bracket"></i></button>
            </div>
        </nav>

        <div class = "containerMainPage">
            <div class="left-sidebar">
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">Viendo publicaciones para: </label>
                    <select class="form-select" id="inputGroupSelect01">
                        <option value="Everybody">Todos</option>
                        <option value="Students">Estudiantes</option>
                        <option value="Academics">Académicos</option>
                    </select>
                </div>
                <button type="button" class="btn btn-light">Nueva publicación</button>
            </div>
            <!-- #Main content-->
            <div class="main-content">
                <div class="write-post-container">
                    <partial name="HeadlineUserPartial" for="thisUser"/>
                    <div class="post-input-container">
                        <textarea rows="3" placeholder="¿Qué estás pensando?"></textarea>
                        <div class="add-post-links">
                                <div class="post-components">
                                    <label>Etiqueta: </label>
                                    <select class="form-select" aria-label="Etiqueta:">
                                        <option selected>Todos</option>
                                        <option value="1">Estudiantes</option>
                                        <option value="2">Académicos</option>
                                    </select>
                                </div>
                                <button type="button" class="btn btn-outline-warning">Agregar imágenes
                                    <i class="fa-regular fa-image"></i>
                                </button>
                                <button type="button" class="btn btn-outline-info">Publicar</button>
                        </div>
                    </div>
                </div>
                @if(Model.posts!=null){
                    foreach(var post in Model.posts){
                        <partial name="PostParcial" model="@post"/>
                    }
                }
            </div>
            <!-- #endregion -->

            <!-- #rigth bar -->
            <div class="rigth-sidebar">
                <div class = "sidebar-title">
                    <h4>Seguidos</h4>
                    <a href=#>Ver todos</a>
                </div>
                @if(Model.following!=null){
                    @for(int i = 0; i < Model.following.Count(); i++)
                    {
                        <partial name="HeadlineUserPartial" model="@Model.following.ElementAt(i)"/>
                    }
                }
            </div>
        </div>
    </body>
</html>
